{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "input": {
      "title": "Input Fields",
      "type": "object",
      "properties": {
        "size": {
          "title": "Size of input field",
          "type": "integer"
        },
        "placeholder": {
          "title": "Placeholder to be rendered",
          "type": "string"
        },
        "renderType": {
          "title": "How the input field should be rendered",
          "type": "string",
          "enum": [
            "default", "colorpicker", "inputDateTime", "inputLink", "rsaInput"
          ]
        }
      }
    },
    "select": {
      "title": "Select Fields",
      "type": "object",
      "properties": {
        "size": {
          "title": "Size of select field",
          "type": "integer"
        },
        "renderType": {
          "title": "How the select field should be rendered",
          "type": "string",
          "enum": [
            "selectSingle", "selectSingleBox", "selectCheckBox", "selectMultipleSideBySide", "selectTree"
          ]
        }
      }
    }
  }
}